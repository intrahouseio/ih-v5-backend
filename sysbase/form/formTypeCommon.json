{
  "grid": [
    { "id": "p1", "xs": 6, "class": "main", "table": "type" },
    { "id": "p2", "xs": 6, "class": "main", "table": "type" },
    { "id": "p3", "xs": 12, "class": "main", "height": 250 }
  ],
  "spacing": 10,

  "p1": [
    { "prop": "_id", "title": "ID", "type": "input", "readonly": true },
    { "prop": "name", "title": "$Name", "type": "input" }
  ],
  "p2": [{ "prop": "txt", "title": "$Comment", "type": "textarea" }],
  "p3": [
    {
      "title": "$DeviceProperty",
      "type": "table",
      "prop": "typepropsTable",

      "columns": [
        { "prop": "prop", "title": "$Devprop_Id", "type": "input" },
        { "prop": "name", "title": "$Name", "type": "input" },
        {
          "prop": "vtype",
          "title": "$Devprop_Type",
          "type": "droplist",
          "data": [
            { "id": "B", "label": "Boolean" },
            { "id": "N", "label": "Number" },
            { "id": "S", "label": "String" }
          ]
        },
        {
          "prop": "op",
          "title": "$Operations",
          "type": "droplist",
          "data": [
            { "id": "r", "label": "Read only" },
            { "id": "rw", "label": "Read/Write" },
            { "id": "w", "label": "Write only" },
            { "id": "c", "label": "Calculate" },
            { "id": "S", "label": "String" }
          ]
        },
        { "prop": "min", "title": "Min", "type": "number" },
        { "prop": "max", "title": "Max", "type": "number" },
        { "prop": "dig", "title": "$Decdig", "type": "number" },
        { "prop": "mu", "title": "$Dev_Mu", "type": "input" }
      ]
    }
  ]
}
