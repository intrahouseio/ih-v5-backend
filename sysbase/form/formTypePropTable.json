{
  "grid": [{ "id": "p3", "xs": 12, "class": "main", "table": "type", "height": "fill" }],
  "spacing": 10,
  "breadcrumbs": { "tree": "types" },

  "p3": [
    {
      "title": "$DeviceProperty",
      "type": "table",
      "popupenable": true,
      "prop": "typepropsTable",
      "genfield": "props",
      "genfilter": { "command": "!def" },

      "columns": [
        { "prop": "newid", "title": "$Devprop_Id", "type": "input", "width": 128 },
        { "prop": "name", "title": "$Name", "type": "input", "width": 128 },
        {
          "prop": "vtype",
          "title": "$Devprop_Type",
          "type": "droplist",
          "data": [
            { "id": "B", "title": "Boolean" },
            { "id": "N", "title": "Number" },
            { "id": "S", "title": "String" }
          ],
          "width": 128
        },
        {
          "prop": "op",
          "title": "$Operations",
          "type": "droplist",
          "data": [
            { "id": "r", "title": "Read only" },
            { "id": "rw", "title": "Read/Write" },
            { "id": "w", "title": "Write only" },
            { "id": "c", "title": "Calculate" }
          ],
          "width": 128
        },
        { "prop": "min", "title": "Min", "type": "number", "width": 50, "hide": "data.vtype.id != 'N'" },
        { "prop": "max", "title": "Max", "type": "number", "width": 50, "hide": "data.vtype.id != 'N'" },
        { "prop": "dig", "title": "$Decdig", "type": "number", "width": 100, "hide": "data.vtype.id != 'N'" },
        { "prop": "mu", "title": "$Dev_Mu", "type": "input", "width": 50 },
        { "prop": "onread", "title": "Функция-обработчик", "type": "droplist", "data": "readhandlers", "width": 250 },
        {
          "prop": "when",
          "title": "Запуск функции",
          "type": "droplist",
          "data": [
            { "id": "0", "title": "При изменении данных" },
            { "id": "1", "title": "При получении данных" },
            { "id": "2", "title": "По таймеру" }
          ],
          "width": 250,
          "hide": "data.op.id != 'c'"
        },
        { "prop": "trigger", "title": "Свойства-триггеры", "type": "input", "width": 250, "hide": "data.op.id != 'c'" }
      ]
    }
  ]
}
