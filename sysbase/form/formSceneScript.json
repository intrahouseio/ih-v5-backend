{
  "grid": [
    { "id": "p1", "xs": 4, "class": "main", "table": "scene" },
    { "id": "p2", "xs": 4, "class": "main", "table": "scene" },
    { "id": "p3", "xs": 4, "class": "main", "table": "scene" },

    { "id": "p6", "xs": 3, "class": "main", "table": "scene", "hide":"!data.p3.simplescene"  },
    
    { "id": "p7", "xs": 6, "class": "main", "table": "simplesceneTable", "height": 500, "hide":"!data.p3.simplescene" },
    { "id": "p8", "xs": 3, "class": "main", "table": "scene", "hide":"!data.p3.simplescene"  },
    { "id": "p9", "xs": 12, "class": "main", "table": "scene", "hide":"!data.p3.simplescene" },
    { "id": "p4", "xs": 12, "class": "main", "table": "scenesTreeTable", "height": 200 },
    { "id": "p5", "xs": 12, "class": "main", "table": "scenecall", "height": "fill" }
  ],
  "spacing": 10,
  "breadcrumbs": { "tree": "scenes" },

  "p1": [
    { "prop": "name", "title": "$Name", "type": "input" },
    { "prop": "reqts", "title": "Updated", "type": "text" }
  ],
  "p2": [
    { "prop": "runInChild", "title": "Запуск с низким приоритетом", "type": "cb" },
    { "prop": "blk", "title": "Заблокировать запуск сценария", "type": "cb" }
  ],
  "p3": [
    { "prop": "simplescene", "title": "Табличный сценарий", "type": "cb", "hide":"1==1" },
    { "prop": "multi", "title": "Мультисценарий", "type": "cb", "hide":"data.p3.simplescene"  }

  ],

  "p6": [
    {
      "title": "Триггеры",
      "type": "table",
      "prop": "scripttriggers",
      "genfield": "scripttriggers",
      "popupenable": true,
      "columns": [
        {
          "prop": "devtrig",
          "title": "Триггеры запуска",
          "type": "smartbutton",
          "width":200,
          "command": "dialog",
          "params": { "title": "Триггеры", "type": "tree", "id": "devprops", "dialog": "devicelink" }
        }
      ]
    }
  ],

 

  "p7": [
    {
      "title": "",
      "type": "table",
      "prop": "simplesceneTable",
      "popupenable": true,

      "columns": [
        { "prop": "device", "title": "Устройство", "type": "droplist", "data":"deviceList", "width": 250 },
        { "prop": "cmd", "title": "Команда", "type": "input", "width": 100 },
        { "prop": "timeout", "title": "Задержка сек", "type": "number", "width": 100 }
      ]
    }
  ],
  "p8": [
    {
      "title": "Триггеры",
      "type": "table",
      "prop": "scripttriggers",
      "genfield": "scripttriggers",
      "popupenable": true,
      "columns": [
        {
          "prop": "devtrig",
          "title": "Триггеры останова",
          "type": "smartbutton",
          "width":200,
          "command": "dialog",
          "params": { "title": "Триггеры", "type": "tree", "id": "devprops", "dialog": "devicelink" }
        }
      ]
    }
  ],
  "p9": [
   
    { "prop": "start_cond", "title": "Условие запуска", "type": "input"  },
    { "prop": "stop_cond", "title": "Условие останова", "type": "input"  }
  ],


  "p4": [
    {
      "title": "",
      "type": "table",
      "prop": "scenesTreeTable",

      "columns": [
        { "prop": "name", "title": "$Name", "type": "text", "width": 150 },
        { "prop": "state", "title": "Состояние", "type": "text", "width": 150 },
        { "prop": "laststart", "title": "Время запуска", "type": "text", "width": 150 },
        { "prop": "laststop", "title": "Время останова", "type": "text", "width": 150 },
        { "prop": "error", "title": "Ошибка", "type": "text", "width": 250 }
      ]
    }
  ],
  "p5": [
    {
      "title": "",
      "type": "table",
      "prop": "scenecall",
      "popupenable": true,

      "columns": []
    }
  ]
}
