{
  "grid": [
    { "id": "p1", "xs": 6, "class": "main", "table": "device" },
    { "id": "p2", "xs": 6, "class": "main", "table": "device" },
    { "id": "p3", "xs": 12, "class": "main", "height":250 }
  ],
  "spacing": 10,

  "p1": [
    { "prop": "dn", "title": "$Dev_Id", "type": "input" },
    { "prop": "name", "title": "$Name", "type": "input" },
    { "prop": "type", "title": "$Dev_Type", "type": "droplist", "data": "typeList" },
    { "prop": "parent_name", "title": "$Place", "type": "text" }
  ],
  "p2": [{ "prop": "txt", "title": "$Comment", "type": "textarea" }],
  "p3": [
    {
      "title": "$DeviceProperty",
      "type": "table",
      "prop": "devicecommonTable",
      
      "columns": [
        { "prop": "prop", "title": "$DeviceProperty", "type": "input", "readonly": true },
        { "prop": "min", "title": "Min", "type": "number" },
        { "prop": "max", "title": "Max", "type": "number" },
        { "prop": "dig", "title": "$Decdig", "type": "number" },
        { "prop": "mu", "title": "$Dev_Mu", "type": "input" },
        { "prop": "unit", "title": "$Plugin", "type": "text", "readonly": true },
        { "prop": "chan", "title": "$Channel", "type": "text", "readonly": true },
        { "prop": "val", "title": "$Value", "type": "number", "readonly": true },
        { "prop": "ts", "title": "$Time", "type": "text", "readonly": true }
      ]
    }
  ]
}
