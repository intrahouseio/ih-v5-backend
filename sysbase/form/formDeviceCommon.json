{
  "grid": [
    { "id": "p1", "xs": 6, "class": "main", "table": "device" },
    { "id": "p2", "xs": 6, "class": "main", "table": "device" },
    { "id": "p3", "xs": 12, "class": "main", "table": "devicecommonTable", "height": 250 }
  ],
  "spacing": 10,
  "breadcrumbs":{"tree":"devices"},

  "p1": [
    { "prop": "dn", "title": "$Dev_Id", "type": "input" },
    { "prop": "name", "title": "$Name", "type": "input" },
    { "prop": "_id", "title": "ID", "type": "text" },
    { "prop": "order", "title": "Order", "type": "text" },
    { "prop": "type", "title": "Type", "type": "droplist", "data":"typeList" },
    { "prop": "tags", "title": "Tags", "type": "tags", "data":"taglist" }
  ],
  "p2": [{ "prop": "txt", "title": "$Comment", "type": "textarea" }],
  "p3": [
    {
      "title": "$DeviceProperty",
      "type": "table",
      "prop": "devicecommonTable",

      "columns": [
        { "prop": "prop", "title": "$DeviceProperty", "type": "text", "width": 150 },
        { "prop": "min", "title": "Min", "type": "number", "width": 50 },
        { "prop": "max", "title": "Max", "type": "number", "width": 50 },
        { "prop": "dig", "title": "$Decdig", "type": "number", "width": 50 },
        { "prop": "mu", "title": "$Dev_Mu", "type": "input", "width": 100 },
        { "prop": "unit", "title": "$Plugin", "type": "text", "width": 150 },
        { "prop": "chan", "title": "$Channel", "type": "text", "width": 150 },
        { "prop": "val", "title": "$Value", "type": "text", "width": 100 },
        { "prop": "ts", "title": "$Time", "type": "text", "width": 200 }
      ]
    }
  ]
}
