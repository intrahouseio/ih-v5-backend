{
  "grid": [
    { "id": "p1", "xs": 6, "class": "main", "table": "scene" },
    { "id": "p2", "xs": 6, "class": "main", "table": "scene" },
   
    { "id": "p3", "xs": 6, "class": "main", "table": "scene" },
    { "id": "p4", "xs": 6, "class": "main", "table": "scene" },
    { "id": "p5", "xs": 12, "class": "main", "table": "scenesTreeTable", "height":"fill" }
  
  ],
  "spacing": 10,
  "breadcrumbs": { "tree": "scenes" },

  "p1": [
    { "prop": "name", "title": "$Name", "type": "input" },
    {
      "prop": "status",
      "title": "Состояние",
      "type": "droplist",
      "data": [
        { "id": "0", "title": "Draft" },
        { "id": "1", "title": "Work" },
        { "id": "2", "title": "Blocked" }
      ]
    }
  ],

  "p2": [
    { "prop": "devs", "title": "Устройства сценария", "type": "text", "hide":"data.p2.realdevs" },
    { "prop": "realdevs", "title": "Устройства системы", "type": "text", "hide":"!data.p2.realdevs" },
    { "prop": "triggers", "title": "Триггеры", "type": "text" }
  ],
  
 

  "p3": [
    { "prop": "_id", "title": "File", "type": "text" },
    { "prop": "reqts", "title": "Updated", "type": "text" }
  ],
  "p4": [{ "prop": "txt", "title": "$Comment", "type": "textarea" }],
  "p5": [
    {
      "title": "",
      "type": "table",
      "prop": "scenesTreeTable",

      "columns": [
        { "prop": "name", "title": "$Name", "type": "text",  "width": 150 },
        { "prop": "state", "title": "Состояние", "type": "text",  "width": 150 },
        { "prop": "laststart", "title": "Время запуска", "type": "text",  "width": 150 },
        { "prop": "laststop", "title": "Время останова", "type": "text",  "width": 150 },
        { "prop": "error", "title": "Ошибка", "type": "text", "width": 250 }
      ]
    }
  ]

}
