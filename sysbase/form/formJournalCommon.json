{
  "grid": [
    { "id": "p1", "xs": 6, "class": "main", "table": "journal" },
    { "id": "p2", "xs": 6, "class": "main", "table": "journal" },
    { "id": "p5", "xs": 12, "class": "main", "table": "journalTable", "height": 250 }
  ],
  "spacing": 8,
  "breadcrumbs": { "tree": "journals" },

  "p1": [
    { "prop": "name", "title": "$Name", "type": "input" },
    {
      "prop": "src",
      "title": "Источник",
      "type": "droplist",
      "data": "journalsrcList"
    },
    { "prop": "uselevelcolor", "title": "Выделять цветом строки в зависимости от уровня", "type": "cb" }
  ],

  "p2": [
    { "prop": "filter_header", "title": "Фильтры для включения сообщения в журнал", "type": "header" },
    { "prop": "unit", "title": "Unit", "type": "droplist", "data": "unitList", "hide":"data.p1.src.id != 'pluginlog'" },
    { "prop": "tags", "title": "Tags", "type": "tags", "data": "taglist", "hide":"data.p1.src.id != 'mainlog'" },
   
    {
      "prop": "location",
      "title": "Location",
      "type": "smartbutton",
      "command": "dialog",
      "params": { "title": "Location", "type": "tree", "id": "places", "dialog": "devicelink" },
      "hide":"data.p1.src.id != 'mainlog'" 
    },
    { "prop": "levelfrom", "title": "Уровень сообщения не ниже", "type": "number", "default": 0 }

  ],

  "p5": [
    {
      "title": "",
      "type": "table",
      "prop": "journalTable",
      "popupenable": true,

      "genfield": "props",

      "columns": [
      
        {
          "prop": "prop",
          "title": "Данные столбца",
          "type": "droplist",
          "data": [
            { "id": "dts", "title": "Дата, время" },
            { "id": "txt", "title": "Сообщение" },
            { "id": "tags", "title": "Тэги" },
            { "id": "level", "title": "Уровень" }
          ],
          "width": 128
        },
        { "prop": "title", "title": "Шапка столбца", "type": "input", "width": 500 },
        { "prop": "width", "title": "Ширина столбца", "type": "number", "width": 150 }
      ]
    }
  ]
}
