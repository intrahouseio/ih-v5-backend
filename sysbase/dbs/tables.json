{
  "place": {
    "store": "db",
    "collection": "lists",
    "filter": { "list": "place" },
    "defRootTitle": "Все",
    "default": { "name": "$NewFolder" },
    "ruleID": { "pref": "dg", "len": 3 }
  },

  "device": {
    "store": "db",
    "collection": "devices",
    "ruleID": { "pref": "d", "len": 4 },
    "validator": {
      "main": {
        "name": { "required": true, "notempty": true},
        "dn": { "required": true, "notempty": true, "unique": true}
      }
    }
  },
 
  "chgroup": {
    "store": "db",
    "collection": "lists",
    "filter": { "list": "chgroup" },
    "defRootTitle": "Каналы",
    "default": { "name": "$NewFolder" },
    "ruleID": { "pref": "chgr", "len": 3 }
  },
  "channels": { "store": "db", "collection": "devhard" },

  "devhard": { "store": "db", "collection": "devhard" },
  "devcurrent": { "store": "db", "collection": "devcurrent" },
  "devicecommonTable": { "store": "db", "collection": "devices", "genfield": "props" },
  "unitchannelsTable": { "store": "virt", "collection": "devhard" },
  "typegroup": {
    "store": "db",
    "collection": "lists",
    "filter": { "list": "typegroup" },
    "defRootTitle": "Типы",
    "default": { "name": "$NewFolder" },
    "ruleID": { "pref": "tg", "len": 3 }
  },

  "type": {
    "store": "db",
    "collection": "types",
    "genfield": "props",

    "validator": {
      "main": {
        "name": { "required": true, "notempty": true}
      },
      "props": {
        "name": { "required": true, "type": "string", "notempty": true },
        "vtype": { "required": true, "type": "string", "notempty": true},
        "op": { "required": true, "type": "string", "notempty": true },
        "min": { "type": "number", "spec": "min" },
        "max": { "type": "number", "spec": "max" }
      }
    },

    "default": { "name": "$NewType", "props": { "value": { "name": "Значение", "vtype": "B", "op": "r" } } },
    "ruleID":{"pref":"t", "len":3}
  },

  "layoutgroup": {
    "store": "db",
    "collection": "lists",
    "filter": { "list": "layoutgroup" },
    "defRootTitle": "Экраны",
    "default": { "name": "$NewFolder" },
    "ruleID":{"pref":"lg", "len":3}
  },
  "layout": { "store": "db", "collection": "layouts", "default": { "name": "Новый экран" },  "ruleID":{"pref":"l", "len":3} },

  "scenegroup": {
    "store": "db",
    "collection": "lists",
    "filter": { "list": "scenegroup" },
    "defRootTitle": "Сценарии",
    "default": { "name": "$NewFolder" },
    "ruleID":{"pref":"sg", "len":3}
  },
  "scene": { "store": "db", "collection": "scenes", "default": { "name": "Новый сценарий" }, "ruleID":{"pref":"scen", "len":3} },

  "plugingroup": {
    "store": "db",
    "collection": "lists",
    "filter": { "list": "plugingroup" },
    "defRootTitle": "Плагины",
    "default": { "name": "$NewFolder" },
    "ruleID":{"pref":"pg", "len":3}
  },

  "snippetgroup": {
    "store": "db",
    "collection": "lists",
    "filter": { "list": "snippetroup" },
    "defRootTitle": "Сниппеты",
    "default": { "name": "$NewFolder" },
    "ruleID":{"pref":"sng", "len":3}
  },

  "units": { "store": "db", "collection": "units", "default": { "name": "Новый плагин" }, "ruleID":{"pref":"u", "len":3} },
  "snippets": { "store": "db", "collection": "snippets", "default": { "name": "Новый сниппет" }, "ruleID":{"pref":"sn", "len":3}  },

  "chartgroup": {
    "store": "db",
    "collection": "lists",
    "filter": { "list": "chartgroup" },
    "defRootTitle": "Графики",
    "default": { "name": "$NewFolder" },
    "ruleID":{"pref":"cg", "len":3} 
  },

  "reportgroup": {
    "store": "db",
    "collection": "lists",
    "filter": { "list": "reportgroup" },
    "defRootTitle": "Отчеты",
    "default": { "name": "$NewFolder" },
    "ruleID":{"pref":"rg", "len":3} 
  },

  "charts": { "store": "db", "collection": "charts", "genfield": "props", "default": { "name": "Новый график" },   "ruleID":{"pref":"c", "len":3}  },

  "reports": { "store": "db", "collection": "reports", "genfield": "props", "default": { "name": "Новый отчет" },  "ruleID":{"pref":"r", "len":3}  },

  "user": { "store": "db", "collection": "users" },
  "token": { "store": "db", "collection": "tokens" }
}
