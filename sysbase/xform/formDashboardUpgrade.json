{
  "grid": [
    { "id": "p1", "xs": 12, "class": "clear", "height": "fill", "hide": "data.p1.registryState == 'OK'" },
    { "id": "p4", "xs": 6, "class": "main", "height": "fill", "hide": "data.p1.registryState != 'OK'"  }
  ],
  "spacing": 10,

  "p1": [
    { "prop": "registryState", "title": "", "type": "text", "hide":"1==1" },
    
    {
      "title": "",
      "type": "portalauth",

      "prop": "portalauth"
    },
    { "prop": "message", "title": "", "type": "text" }
  ],

  "p4": [
    { "prop": "uptimeinfo", "title": "Version&Upgrade", "type": "header", "size": "h6" },

    { "prop": "version", "title": "$Version", "type": "text" },
    { "prop": "restartButton", "title": "$RestartIH", "type": "button", "command": "restart", "param": "" },

    { "prop": "newversion", "title": "$NEWVERSION", "type": "text", "hide": "!data.p4.newversion" },
    {
      "prop": "checkButton",
      "title": "$CHECKUPDATE",
      "type": "button",
      "command": "checkupdate",
      "param": "",
      "hide": "data.p4.newversion"
    },
    {
      "prop": "updateButton",
      "title": "$UPDATE",
      "type": "button",
      "command": "update",
      "param": "",
      "hide": "!data.p4.newversion"
    }
  ]
}
